<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                        http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.slc.sli.aggregation</groupId>
  <artifactId>Math-HighestEver</artifactId>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.slc.sli</groupId>
    <artifactId>aggregation</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <properties>
    <sli.home>${project.parent.basedir}</sli.home>
    <hadoop.job.mainclass>org.slc.sli.aggregation.HighestEver</hadoop.job.mainclass>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.slc.sli.aggregation</groupId>
      <artifactId>mapreduce</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
        <groupId>org.apache.hadoop</groupId>
        <artifactId>hadoop-core</artifactId>
    </dependency>

    <dependency>
        <groupId>org.mongodb</groupId>
        <artifactId>mongo-hadoop-core</artifactId>
    </dependency>

    <dependency>
        <groupId>org.mongodb</groupId>
        <artifactId>mongo-java-driver</artifactId>
    </dependency>

  </dependencies>

  <build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
                <execution>
                    <id>make-assembly</id>
                    <phase>package</phase>
                    <goals>
                        <goal>single</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
                <execution>
                    <goals>
                        <goal>java</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <mainClass>org.slc.sli.aggregation.HighestEver</mainClass>
            </configuration>
        </plugin>
    </plugins>
  </build>

</project>
