<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

<http auto-config="true" use-expressions="true">
    <intercept-url pattern="/login" access="permitAll"/>
    <intercept-url pattern="/static/**" filters="none"/>
    <intercept-url pattern="/studentlist" access="hasRole('Educator')"/>
    <intercept-url pattern="/studentlistcontent" access="hasRole('Educator')"/>
    <intercept-url pattern="/appselector" access="hasRole('Educator')"/>
    <intercept-url pattern="/" access="hasRole('Educator')"/>
    <intercept-url pattern="/**" access="denyAll" />
    <anonymous username="anonymous" granted-authority="ROLE_ANONNYMOUS" />
    <form-login/>
    <logout/>
</http>

<authentication-manager alias="authenticationManager">
    <authentication-provider>
    <user-service>
        <user name="demo" password ="demo" authorities="Educator"/>
        <user name="DemoUser" password="demo" authorities="Educator"/>
        <user name="lkim" password="lkim" authorities="Educator" /> 
        <user name="rbraverman" password="rbraverman" authorities="Educator" /> 
        <user name="cgray" password="cgray" authorities="Educator" /> 
    </user-service>
    </authentication-provider>
</authentication-manager>
</beans:beans>
