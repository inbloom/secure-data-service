<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="false" maxBytesLocalHeap="30%">

    <defaultCache eternal="false" maxElementsInMemory="1000"
        overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
        timeToLiveSeconds="300" memoryStoreEvictionPolicy="LRU"/>

    <cache name="user.panel.data" eternal="false" overflowToDisk="false"><sizeOfPolicy maxDepth="100000"/></cache>

    <cache name="user.custom.config" eternal="false" overflowToDisk="false"><sizeOfPolicy maxDepth="100000"/>
    </cache>

    <cache name="user.config.widget" eternal="false" overflowToDisk="false"><sizeOfPolicy maxDepth="100000"/></cache>

    <cache name="user.panel.config" eternal="false" overflowToDisk="false" >
    </cache>

    <cache name="portal.data" eternal="false" overflowToDisk="false" />

</ehcache>
