<% @title="Provision Landing Zone" %>
<div class="provision">
	<h1>Provision Landing-Zone</h1>
	<p>This will create the directory where the data will be imported from.</p>
	<%= form_tag( url_for(:controller => 'landing_zone', :action => 'provision')) %>
		<% if not @edOrgs.empty? %>
			<% @edOrgs.each do |org| %>
				<div class="provisionBlock">
					<%= radio_button_tag 'ed_org', org.stateUniqueId %>
					<label for="ed_org_<%= org.stateUniqueId %>"><%= org.nameOfInstitution %></label>
				</div>
			<% end %>
			<div class="provisionBlock">
	                  <input id="custom" name="ed_org" type="radio" value="custom" /> 
			  <label for="custom">Custom High-Level Ed-Org</label>
			</div>
		<% else %>
			<input id="custom" type="hidden" name="ed_org" value="custom">
		<% end %>
		<div class="edOrgIdSelect">
			<%= text_field_tag "custom_ed_org", nil, :placeholder => "State Organization Id", :disabled => (not @edOrgs.empty?) %>
			<label for="custom_ed_org">State organization Id of Ed Org</label>
		</div>
		<div class="provisionButtons">
			<input name="commit" type="submit" value="Provision" id="provisionButton"/>
			<input name="cancel" type="submit" value="Cancel" id="cancelButton"/>
		</div>
	</form>
</div>
