<?xml version="1.0"?>
<agent id="SifAgent" sifVersion="2.3">

    <!-- ====================================================================== 
        *** GLOBAL AGENT PROPERTIES *** ====================================================================== 
        Any <property> defined here is added to the AgentProperties object as a default 
        agent property. ====================================================================== -->

    <!-- These properties are specific to this agent -->
    <!-- <property name="jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" 
        /> -->

    <!-- The messaging mode to use ("Push" or "Pull") -->
    <property name="adk.messaging.mode" value="Pull" />

    <!-- The transport mode to use ("http" or "https") -->
    <property name="adk.messaging.transport" value="http" />

    <!-- The polling frequency (in milliseconds) when running in Pull mode -->
    <property name="adk.messaging.pullFrequency" value="30000" />

    <!-- The size of packets -->
    <property name="adk.messaging.maxBufferSize" value="32000" />

    <!-- ====================================================================== 
        *** ZONE TEMPLATES *** ====================================================================== 
        Because all zones are typically configured with the same options, the configuration 
        file allows administrators to create "templates" that define a common set 
        of properties. Each zone element may refer to a template. Note that properties 
        defined in a <template> or directly in a <zone> element override the global 
        agent properties defined above, as well as any properties specified on the 
        command-line. ====================================================================== -->

    <template id="Default">


    </template>

    <!-- ====================================================================== 
        *** ZONES *** ====================================================================== 
        Define each zone the agent will connect to here. If a <zone> contains child 
        <property> elements, they override properties of the same name that are defined 
        in the zone template. ====================================================================== -->

    <zone id="Zone1" template="Default" url="http://localhost:7080/Zone1" />

    /
    <!-- ====================================================================== 
        *** TRANSPORT PROPERTIES *** ====================================================================== 
        The AgentConfig.apply method automatically applies <transport> properties 
        to the agent. You could also do this manually by calling the getDefaultHttpProperties 
        and getDefaultHttpsProperties methods of the Agent class and setting the 
        various properties such as port number ====================================================================== -->

    <transport enabled="true" protocol="http">
        <property name="port" value="25313" />
        <!--<property name="pushHost" value="testHost" /> -->
    </transport>

    <transport enabled="true" protocol="https">
        <!--<property name="host" value="192.168.1.102" /> -->
        <property name="port" value="7443" />
        <!--<property name="pushHost" value="testHost" /> -->
        <property name="keyStore" value="Agent.ks" />
        <property name="keyStorePassword" value="changeit" />
        <property name="trustStore" value="Trusted.ks" />
        <property name="trustStorePassword" value="changeit" />
        <property name="clientAuth" value="false" />
        <!--<property name="ciphers" value="SSL_DHE_DSS_WITH_3DES_EDE_CBC_SHA" 
            /> -->
    </transport>


    <!-- ====================================================================== 
        *** MAPPINGS *** ====================================================================== 
        ====================================================================== -->

    <mappings id="Default">


    </mappings>

</agent>
