        <entry key="#{T(org.slc.sli.ingestion.FileType).CSV_STUDENT}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.student.csv}" />
            <constructor-arg>
              <list>
