  <bean id="didSchemaParser" class="org.slc.sli.ingestion.transformation.normalization.did.DidSchemaParser">
    <property name="xsdLocation" value="classpath:edfiXsd/Ed-Fi-Core.xsd" />
    <property name="extensionXsdLocation" value="classpath:edfiXsd-SLI/SLI-Ed-Fi-Core.xsd" />
    <property name="xsdParentLocation" value="classpath:edfiXsd" />
    <property name="extensionXsdParentLocation" value="classpath:edfiXsd-SLI" />
  </bean>
  
  <bean id="deterministicIdResolver" class="org.slc.sli.ingestion.transformation.normalization.did.DeterministicIdResolver">
  	<property name="didSchemaParser" ref="didSchemaParser" />
  </bean>

  <bean id="abstractEdFi2SLITransformer" class="org.slc.sli.ingestion.transformation.EdFi2SLITransformer" abstract="true" depends-on="stageTrackingAspect">
    <property name="entityConfigurations" ref="entityConfigurationsFactory" />
    <property name ="dIdResolver" ref ="deterministicIdResolver" />
    <property name="entityRepository" ref="mongoEntityRepository" />
  </bean>

  <bean id="smooksEdFi2SLITransformer" class="org.slc.sli.ingestion.transformation.SmooksEdFi2SLITransformer"
    parent="abstractEdFi2SLITransformer">
    <property name="smooksConfigs" ref="smooksConfigs" />
  </bean>

  <bean id="transformationFactory" class="org.slc.sli.ingestion.transformation.TransformationFactory">
    <property name="transformationStrategySuffix" value="TransformationStrategy" />
    <property name="neutralRecordMongoAccess" ref="neutralRecordMongoAccess" />
  </bean>

  <bean id="entityConfigurationsFactory" class="org.slc.sli.ingestion.transformation.normalization.EntityConfigFactory">
    <property name="searchPath" value="classpath:smooksEdFi2SLI/" />
  </bean>

  <bean id="didEntityConfigReader" class="org.slc.sli.ingestion.transformation.normalization.did.DidEntityConfigReader">
